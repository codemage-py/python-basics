def converter_temperatura(valor, unidade_origem, unidade_destino):
    # Primeiro converte para Celsius
    if unidade_origem == 'C':
        celsius = valor
    elif unidade_origem == 'F':
        celsius = (valor - 32) * 5/9
    elif unidade_origem == 'K':
        celsius = valor - 273.15
    else:
        return None
    
    # Depois converte para unidade destino
    if unidade_destino == 'C':
        return celsius
    elif unidade_destino == 'F':
        return (celsius * 9/5) + 32
    elif unidade_destino == 'K':
        return celsius + 273.15

print("ğŸŒ¡ï¸ CONVERSOR DE TEMPERATURA")
print("Unidades: C (Celsius), F (Fahrenheit), K (Kelvin)")

while True:
    print("\n" + "="*40)
    valor = float(input("Temperatura: "))
    origem = input("De (C/F/K): ").upper()
    destino = input("Para (C/F/K): ").upper()
    
    if origem in ['C', 'F', 'K'] and destino in ['C', 'F', 'K']:
        resultado = converter_temperatura(valor, origem, destino)
        
        # DescriÃ§Ã£o amigÃ¡vel
        unidades_nome = {
            'C': 'Celsius',
            'F': 'Fahrenheit', 
            'K': 'Kelvin'
        }
        
        print(f"\nğŸ”¥ {valor}Â°{unidades_nome[origem]} = {resultado:.2f}Â°{unidades_nome[destino]}")
        
        # Curiosidade
        if destino == 'C':
            if resultado < 0:
                print("â„ï¸ EstÃ¡ congelando! Ãgua vira gelo.")
            elif resultado > 100:
                print("ğŸ’¨ EstÃ¡ fervendo! Ãgua evapora.")
            else:
                print("ğŸ’§ Temperatura normal da Ã¡gua lÃ­quida.")
    else:
        print("âŒ Unidade invÃ¡lida!")
    
    if input("\nConverter outra? (s/n): ").lower() != 's':
        break
