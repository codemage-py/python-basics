print("üè¶ SIMULADOR DE CAIXA ELETR√îNICO")

saldo = 1000.00
extrato = []

while True:
    print(f"\nSaldo: R$ {saldo:.2f}")
    print("1. Saque")
    print("2. Dep√≥sito")
    print("3. Extrato")
    print("4. Sair")
    
    opcao = input("Op√ß√£o: ")
    
    if opcao == "1":
        valor = float(input("Valor do saque: R$ "))
        if valor <= saldo:
            saldo -= valor
            extrato.append(f"Saque: -R$ {valor:.2f}")
            print(f"üí∏ Saque de R$ {valor:.2f} realizado!")
        else:
            print("‚ùå Saldo insuficiente!")
    
    elif opcao == "2":
        valor = float(input("Valor do dep√≥sito: R$ "))
        saldo += valor
        extrato.append(f"Dep√≥sito: +R$ {valor:.2f}")
        print(f"üí∞ Dep√≥sito de R$ {valor:.2f} realizado!")
    
    elif opcao == "3":
        print("\nüìÑ EXTRATO:")
        for movimento in extrato[-5:]:  # √öltimas 5 transa√ß√µes
            print(movimento)
        print(f"Saldo atual: R$ {saldo:.2f}")
    
    elif opcao == "4":
        print("Obrigado por usar nosso banco! üëã")
        break
